/* pages/goodsDetail/index.wxss */

/* 轮播图 */

.img {
  width: 750rpx;
  height: 750rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  display: block;
}

.img swiper {
  width: 100%;
  height: 100%;
}

/* 商品标题信息 */

.info view {
  padding: 10rpx;
}

.info .pric {
  color: red;
  font-size: 22px;
}

.info .title {
  display: flex;
  justify-content: space-between;
}

.title .text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-right: 20rpx;
  font-size: 14px;
  line-height: 1.5;
  height: 35px;
}
.title .collect{
  text-align: center;
  width: 100rpx;
  border-left: 1px solid #ccc;
  color: #999;
  font-size: 12px;
  margin-right: 10rpx;
  padding-left: 20rpx;
}
.express{
  color: #999;
  font-size: 14px;
  border-bottom: 2px solid #f5f5f5;
  padding-bottom: 40rpx;
  margin-bottom: 20rpx;
}
/* 富文本内容 */
rich-text{
  font-size: 14px;
  margin-bottom: 200rpx;
}

/* 底部 */
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  background-color: #fff;
}
.kefu,.cart{
  width: 20%;
  font-size: 13px;
  color: #666;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
}
.addCart,.nowPay{
  color:#fff;
  width: 30%;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
  font-size: 15px;
}
.addCart{
  background-color: #ffb517;
}
.nowPay{
  background-color: #ff2d4a;
}
/* 联系客服按钮 */
.kefu-btn{
  position: absolute;
  width: 20%;
  opacity: 0;
}
